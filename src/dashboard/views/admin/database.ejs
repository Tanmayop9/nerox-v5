<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Nerox Dashboard</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../partials/navbar', { username, role }) %>
    
    <main class="container">
        <div class="page-header">
            <h1>üìÅ <%= database %></h1>
            <a href="/admin" class="btn btn-secondary">‚Üê Back</a>
        </div>
        
        <% if (success) { %>
            <div class="alert alert-success">‚úÖ <%= success %></div>
        <% } %>
        <% if (error) { %>
            <div class="alert alert-error">‚ùå <%= error %></div>
        <% } %>
        
        <!-- Add/Edit Form -->
        <div class="admin-form-container">
            <h2>‚ûï Add / Edit Entry</h2>
            <form method="POST" action="/admin/database/<%= encodeURIComponent(database) %>/set" class="admin-form">
                <div class="form-row">
                    <div class="form-group">
                        <label for="key">Key</label>
                        <input type="text" name="key" id="key" placeholder="Enter key" required>
                    </div>
                    <div class="form-group flex-grow">
                        <label for="value">Value (JSON or string)</label>
                        <textarea name="value" id="value" placeholder='{"example": true}' rows="3" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
        
        <!-- Data Table -->
        <div class="data-viewer">
            <h2>üìã Current Data (<%= Object.keys(data).length %> entries)</h2>
            <% if (Object.keys(data).length === 0) { %>
                <div class="empty-state">
                    <p>üì≠ No data in this database</p>
                </div>
            <% } else { %>
                <div class="data-table-wrapper">
                    <table class="data-table admin-table">
                        <thead>
                            <tr>
                                <th>Key</th>
                                <th>Value</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for (const [key, value] of Object.entries(data)) { %>
                                <tr>
                                    <td class="key-cell"><%= key %></td>
                                    <td class="value-cell">
                                        <pre><%= JSON.stringify(value, null, 2) %></pre>
                                    </td>
                                    <td class="action-cell">
                                        <form method="POST" action="/admin/database/<%= encodeURIComponent(database) %>/delete" class="inline-form" onsubmit="return confirm('Are you sure you want to delete this entry?')">
                                            <input type="hidden" name="key" value="<%= key %>">
                                            <button type="submit" class="btn btn-danger btn-small">üóëÔ∏è Delete</button>
                                        </form>
                                        <button type="button" class="btn btn-secondary btn-small" onclick="editEntry('<%= key %>', <%= JSON.stringify(JSON.stringify(value)) %>)">‚úèÔ∏è Edit</button>
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            <% } %>
        </div>
    </main>
    
    <script>
        function editEntry(key, value) {
            document.getElementById('key').value = key;
            document.getElementById('value').value = typeof value === 'string' ? value : JSON.stringify(JSON.parse(value), null, 2);
            document.getElementById('key').focus();
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }
    </script>
</body>
</html>
